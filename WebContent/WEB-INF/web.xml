<?xml version="1.0" encoding="utf-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

  <display-name>Testruts for dev</display-name>
  <description>Testruts for dev 2014/05/13</description>

  <context-param>
   <description>properties</description>
   <param-name>properties</param-name>
   <param-value>/WEB-INF/testruts.properties</param-value>
  </context-param>

<!-- 
  <filter>
    <filter-name>S2020Filter</filter-name>
    <filter-class>jp.co.ksi.eip.commons.servlet.S2020Filter</filter-class>
  </filter>
 -->
  <filter>
    <filter-name>SetCharacterEncoding</filter-name>
    <filter-class>jp.co.ksi.eip.commons.servlet.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>SetCharacterEncodingSJIS</filter-name>
    <filter-class>jp.co.ksi.eip.commons.servlet.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>Shift_JIS</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>RemoteUser</filter-name>
    <filter-class>jp.co.ksi.eip.commons.servlet.BasicRemoteUserFilter</filter-class>
  </filter>
  <filter>
    <description>facebook oauth Test</description>
    <filter-name>AuthCheckFilter</filter-name>
    <filter-class>jp.co.ksi.eip.commons.servlet.AuthCheckFilter</filter-class>
    <init-param>
      <param-name>loginURL</param-name>
      <param-value>/facebook/login</param-value>
    </init-param>
    <init-param>
      <param-name>exclude</param-name>
      <param-value>.*\.css|.*\.jpg|.*\.gif|.*\.png</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>Semaphore</filter-name>
    <filter-class>jp.co.ksi.incubator.SemaphoreFilter</filter-class>
    <init-param>
      <param-name>max</param-name>
      <param-value>5</param-value>
    </init-param>
  </filter>
