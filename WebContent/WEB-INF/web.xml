<!-- 
  <filter-mapping>
    <filter-name>S2020Filter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
 -->
  <filter-mapping>
    <filter-name>SetCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SetCharacterEncodingSJIS</filter-name>
    <url-pattern>/mobile/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RemoteUser</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthCheckFilter</filter-name>
    <url-pattern>/facebook/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Semaphore</filter-name>
    <url-pattern>/sleep.jsp</url-pattern>
  </filter-mapping>

  <!-- Listener configuration -->
  <listener>
   <description>Context Initializer</description>
   <listener-class>jp.co.ksi.eip.commons.servlet.InitContextListener</listener-class>
  </listener>
<!--
  <listener>
   <listener-class>jp.co.ksi.eip.commons.servlet.SessionListener</listener-class>
  </listener>
 -->

  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml, /WEB-INF/struts-config-oauth.xml, /WEB-INF/struts-config-oauth2.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/sub</param-name>
      <param-value>/WEB-INF/struts-config-sub.xml</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <display-name>SQLServlet</display-name>
    <servlet-name>SQLServlet</servlet-name>
    <servlet-class>jp.co.ksi.eip.commons.servlet.JndiSqlServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>DownloadTestServlet</display-name>
    <servlet-name>DownloadTestServlet</servlet-name>
    <servlet-class>jp.co.ksi.testruts.servlet.DownloadTestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MiniProxyServlet</servlet-name>
    <servlet-class>jp.co.ksi.eip.commons.servlet.MiniProxyServlet</servlet-class>
    <init-param>
      <param-name>proxyHost</param-name>
      <param-value>172.16.10.3</param-value>
    </init-param>
    <init-param>
      <param-name>proxyPort</param-name>
      <param-value>3128</param-value>
    </init-param>
  </servlet>
  <servlet>
    <display-name>CronServlet</display-name>
    <servlet-name>CronServlet</servlet-name>
    <servlet-class>jp.co.ksi.eip.commons.cron.CronServlet</servlet-class>
    <init-param>
      <param-name>appConfig</param-name>
      <param-value>/WEB-INF/testruts.properties</param-value>
    </init-param>
    <init-param>
      <param-name>url</param-name>
      <param-value>http://localhost/testruts/CronServlet</param-value>
    </init-param>
    <init-param>
      <param-name>start</param-name>
      <param-value>true</param-value>
    </init-param>
<!--
    <load-on-startup>9</load-on-startup>
 -->
  </servlet>
  <servlet>
    <display-name>JCSAdminServlet</display-name>
    <servlet-name>JCSAdminServlet</servlet-name>
    <servlet-class>org.apache.jcs.admin.servlet.JCSAdminServlet</servlet-class>
<!-- 
    <init-param>
      <param-name>properties</param-name>
      <param-value>WEB-INF/conf/JCSAdminServlet.velocity.properties</param-value>
    </init-param>
 -->
  </servlet>
  <servlet>
    <servlet-name>X_MS_Application</servlet-name>
    <servlet-class>jp.co.ksi.testruts.servlet.X_MS_ApplicationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>jp.co.ksi.testruts.servlet.TestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FacebookLoginServlet</servlet-name>
    <servlet-class>jp.co.ksi.incubator.oauth2.FacebookLoginServlet</servlet-class>
    <init-param>
      <param-name>oauthConfig</param-name>
      <param-value>/WEB-INF/facebook.properties</param-value>
    </init-param>
    <init-param>
      <param-name>loginPage</param-name>
      <param-value>/facebook/login.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>startPage</param-name>
      <param-value>/facebook/</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>WSOLoginServlet</servlet-name>
    <servlet-class>jp.co.ksi.incubator.wso.WSOLoginServlet</servlet-class>
  </servlet>
  
  <!-- Standard Action Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SQLServlet</servlet-name>
    <url-pattern>/SQLServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadTestServlet</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MiniProxyServlet</servlet-name>
    <url-pattern>/proxy</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CronServlet</servlet-name>
    <url-pattern>/CronServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JCSAdminServlet</servlet-name>
    <url-pattern>/jcs</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>X_MS_Application</servlet-name>
    <url-pattern>/clickonce</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FacebookLoginServlet</servlet-name>
    <url-pattern>/facebook/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WSOLoginServlet</servlet-name>
    <url-pattern>/wsoLogin</url-pattern>
  </servlet-mapping>

  <session-config>
   <session-timeout>10</session-timeout>
  </session-config>

  <!-- The Usual Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

 <security-constraint>
  <web-resource-collection>
   <web-resource-name>realm</web-resource-name>
   <url-pattern>/digest.jsp</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>manager</role-name>
  </auth-constraint>
 </security-constraint>

 <login-config>
  <auth-method>DIGEST</auth-method>
  <realm-name>hoge</realm-name>
 </login-config>

 <security-role>
  <role-name>manager</role-name>
 </security-role>

 <jsp-config>
  <taglib>
    <taglib-uri>ksi.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/ksi.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>eip.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/eip.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>struts-bean.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-bean.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>struts-html.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-html.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>struts-logic.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-logic.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>struts-nested.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-nested.tld</taglib-location>
  </taglib>
 </jsp-config>

